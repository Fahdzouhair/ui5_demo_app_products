<core:FragmentDefinition
xmlns:core="sap.ui.core"
xmlns="sap.m"
xmlns:l="sap.ui.layout"
xmlns:form="sap.ui.layout.form"
>
<Dialog id="editFragment" title="{i18n>editNewProduct}" contentWidth="800px" afterClose="onAfterCloseEdit">
  <content>
        <form:SimpleForm
          layout="ResponsiveGridLayout"
          editable="true"
          breakpointM="600px"
          breakpointL="1024px"
          breakpointXL="1440px"
          emptySpanM="0"
          emptySpanL="1"
          emptySpanXL="1"
          labelSpanS="12"
          labelSpanM="3"
          labelSpanL="4"
          labelSpanXL="4"
          columnsL="2"
          columnsXL="2">
          <form:content>
            <core:Title text="{i18n>productDetails}" />

            <Label text="{i18n>productName}" />
            <Input id="idProductNameEdit" 
                   maxLength="40" 
                   value="{Name}" 
                   />

            <Label text="{i18n>category}" />
            <ComboBox id="idCategoryEdit" 
                      items="/Categories"
                      selectedKey="{Category/ID}"
                      enabled="false"
                      >

              <items>
                <core:Item key="{ID}" text="{Name}" />
              </items>

            </ComboBox>
            
            <Label text="{i18n>price}" />
            <Input id="idPriceEdit" 
                   type="Number" 
                   value="{Price}"
                />
            
            <Input value="EUR" editable="false">
            
              <layoutData>
                <l:GridData span="XL1 L2 M3 S12" />
              </layoutData>
            </Input>
          
            <core:Title text="{i18n>dates}" />
            
            <Label text="{i18n>releaseDate}" />
            <DatePicker id="idReleaseDateEdit"  
                        dateValue="{ReleaseDate}"
                        />
          
            <Label text="{i18n>discontinuedDate}" />
            <DatePicker id="idDiscontinuedDateEdit" 
                        dateValue="{DiscontinuedDate}"
                        />

            <Label text="{i18n>rating}"/>
            <RatingIndicator id="idRatingEdit" value="{Rating}"/>
          </form:content>
        </form:SimpleForm>
  </content>
    <beginButton>
      <Button type="Emphasized" text="{i18n>edit}" press="onPressEditProduct2" />
    </beginButton>
    <endButton>
        <Button text="{i18n>cancel}" press="onPressCancelNewProduct" />
    </endButton>
</Dialog>
</core:FragmentDefinition>