<mvc:View 
    controllerName="ui5.demo.app.controller.App"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc">
    <Shell>
    <App>
      <Page title="{i18n>appTitle}">

           <List
            id="idProductList"
            class="sapUiSmallMarginTop listWithSmallerTitle"
            items="{
              path : 'product>/items',
              groupHeaderFactory : '.formatter.formatGroupHeader'
            }"
            noDataText="{i18n>noDataText}"
            mode="Delete"
            delete="onPressDelete">
            <headerToolbar>
              <Toolbar>
                <Title text="{i18n>listHeader}" />
                <ToolbarSpacer />
                <Button icon="sap-icon://sort" press="onSortProduct" />
                <Button icon="sap-icon://group" press="onGroupProduct" />
                <Button icon="sap-icon://filter" press="onFilterProduct" />
                <Button icon="sap-icon://add" press="onPressAddNewProduct" />
              </Toolbar>
            </headerToolbar>
            <infoToolbar>
                        <Toolbar id="idFilterInfoToolbar" visible="false">
                            <Text id="idFilterText" />
                        </Toolbar>
                      </infoToolbar>
            <items>
              <ObjectListItem
                title="{product>Name}"
                number="{
                  parts: [{ path: 'product>Price' }, { path: 'product>currency' }],
                              type: 'sap.ui.model.type.Currency',
                              formatOptions: {
                                 showMeasure: false
                          }
                }"
                numberUnit="EUR"
                numberState="{= ${product>Price} > 20 ? 'Warning' : 'None' }">
                <attributes>
                  <ObjectAttribute 
                        title= "Category" 
                        text = "{
                            path : 'product>Category',
                            formatter : '.formatter.formatCategory'
                        }"/>

                  

                  <ObjectAttribute title="Release date" text="{ 
                      path: 'product>ReleaseDate',
                      type: 'sap.ui.model.type.Date',
                      formatOptions: {
                      source: {pattern: 'yyyy-MM-ddTHH:mm:ss.SSSX'},
                      style: 'short'
                      }
                                  }"/>
                  <ObjectAttribute 
                      visible="{= !!${product>Width} &amp;&amp; !!${product>Height} &amp;&amp; !!${product>Depth}}"
                      text="{product>Width} x {product>Height} x {product>Depth} cm"/>
                
                </attributes>
                <firstStatus>
                  <ObjectStatus text="{ 
                                        path: 'product>DiscontinuedDate',
                                        formatter:'.formatter.formatAvailabilityText',
                                        type: 'sap.ui.model.type.Date',
                                        formatOptions: {
                                              source: {
                                              pattern: 'yyyy-MM-ddTHH:mm:ss.SSSX'
                                          },
                                        style: 'short'
                                      }}"
                      state="{ 
                          path : 'product>DiscontinuedDate',
                          formatter: '.formatter.formatAvailabilityState'
                           }"
                   />
                </firstStatus>
              </ObjectListItem>
            </items>
          </List>

      </Page>
    </App>
  </Shell>
</mvc:View>